<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Helyszín*"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTxName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:hint="Pl. Utca, házszám" />

        <TextView
            android:id="@+id/tvOpeningHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nyitvatartás"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTxOpeningHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:hint="Pl. 07:00-21:00" />

        <CheckBox
            android:id="@+id/checkBoxIsFree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingyenes"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ár"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTxPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:hint="Pl. 100Ft" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>